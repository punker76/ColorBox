<Window x:Class="ColorBoxTest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ncore="http://schemas.ncore.com/wpf/xaml/colorbox"
        Title="ColorBox Demo" Height="500" Width="800" WindowStartupLocation="CenterScreen" Background="DarkGray">
      
    <Grid Margin="10" >
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="250"/>
        </Grid.ColumnDefinitions>

        <Border Background="{Binding ElementName=CB, Path=Brush}"/>
        
        <ncore:ColorBox x:Name="CB" Grid.Column="1" Margin="10,0,0,0" VerticalAlignment="Top"/>
        
    </Grid>
    
</Window>
